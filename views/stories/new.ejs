<% layout('./layouts/boilerplate') -%>
<h1>Submit a story</h1>
<form action="/" method="post">
    <div class="row mb-3">
        <label for="storyTitle" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="storyTitle" name="story[title]">
        </div>
    </div>
    <div class="row mb-3">
        <label for="storyUrl" class="col-sm-2 col-form-label">URL</label>
        <div class="col-sm-10">
            <input type="url" class="form-control" id="storyUrl" name="story[url]">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>