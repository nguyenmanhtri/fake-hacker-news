<% layout('./layouts/boilerplate') -%>
<h1>Search results</h1>
<table class="table table-sm table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
    </tr>
  </thead>
  <tbody>
    <% for ( let i = 0; i < stories.length; i++ ) { %>
      <tr>
        <th scope="row"><%= i + 1 %></th>
        <td>
          <a href="<%= stories[i].url %>" target="_blank" class="link-dark"><%= stories[i].title %></a>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>