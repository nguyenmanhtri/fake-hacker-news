<% layout('./layouts/boilerplate') -%>
<h1>Edit a story</h1>
<form action="/edit/<%= stories._id %>?_method=PUT" method="POST">
    <div class="row mb-3">
        <label for="storyTitle" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="storyTitle" name="story[title]" value="<%= stories.title %>">
        </div>
    </div>
    <div class="row mb-3">
        <label for="storyUrl" class="col-sm-2 col-form-label">URL</label>
        <div class="col-sm-10">
            <input type="url" class="form-control" id="storyUrl" name="story[url]" value="<%= stories.url %>">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>